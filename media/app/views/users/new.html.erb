<h2>New User</h2>

<%= form_with model: @user do |form|%>
    <%=form.label :name%>
    <%=form.text_field :name%>
    
    <% @user.errors.full_messages_for(:name).each do |message|%>
        <%=message%>
    <%end%>
    <br>

    <%=form.label :age%>
    <%=form.text_field :age%>

     <% @user.errors.full_messages_for(:age).each do |message|%>
        <%=message%>
    <%end%>
    <br>

    <%=form.submit "Create new User"%>
<%end%>